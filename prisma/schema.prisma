generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  password   String
  nom        String
  prenom     String
  telephone  String
  role       Role
  photo_profil String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  Professeur Professeurs?
  Logs       Logs[]
}

enum Role {
  professeur
  etudiant
}

model Professeurs {
  id          Int     @id @default(autoincrement())
  user_id     Int     @unique
  statut      Statut
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  
  user        Users @relation(fields: [user_id], references: [id])

  MatieresDetails MatieresDetails[]
}

enum Statut {
  permanent
  vacataire
}

model Matieres {
  id            Int     @id @default(autoincrement())
  nom           String  @unique
  
  MatieresDetails MatieresDetails[]
}

model MatieresDetails {
  id            Int     @id @default(autoincrement())
  professeur_id Int
  matiere_id    Int
  
  professeur    Professeurs @relation(fields: [professeur_id], references: [id])
  matiere       Matieres @relation(fields: [matiere_id], references: [id])
}

model Logs {
  id         Int     @id @default(autoincrement())
  user_id    Int
  action_type String
  details    String?
  created_at DateTime @default(now())
  
  user       Users @relation(fields: [user_id], references: [id])
}
